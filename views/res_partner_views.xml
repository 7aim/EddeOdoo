<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add fields to partner form view -->
    <record id="view_partner_form_student_extension" model="ir.ui.view">
        <field name="name">res.partner.form.student.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add button in the header -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_create_student" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-graduation-cap"
                        string="Tələbə Yarat"
                        help="Bu kontaktı tələbə olaraq qeydiyyata al"/>
            </xpath>
            
            <!-- Add teacher field -->
            <field name="category_id" position="after">
                <field name="is_teacher"/>
            </field>
            
            <!-- Add student fields in a new page -->
            <page name="internal_notes" position="after">
                <page string="👨‍🏫 Müəllim Məlumatları" invisible="is_teacher == False">
                    <group string="Maaş Parametrləri">
                        <group>
                            <field name="salary_type"/>
                            <field name="fixed_salary" invisible="salary_type != 'fixed'" required="[('is_teacher', '=', True), ('salary_type', '=', 'fixed')]"/>
                        </group>
                        <group>
                            <field name="lesson_rate" invisible="salary_type != 'percentage'" required="[('is_teacher', '=', True), ('salary_type', '=', 'percentage')]"/>
                        </group>
                    </group>
                    <div class="alert alert-info" style="margin: 10px 0;">
                        <strong>📋 Maaş Tipi Açıqlaması:</strong><br/>
                        • <strong>Sabit Maaş:</strong> Aylıq sabit məbləğ ödənilir<br/>
                        • <strong>Faizli Maaş:</strong> Həmin ayda keçdiyi dərs sayı × dərs başına məbləğ
                    </div>
                </page>
                <page string="🎓 Tələbə Məlumatları" invisible="is_teacher == True">
                    <group>
                        <field name="program_id" widget="many2many_tags"/>
                        <field name="course_id" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="university_id"/>
                        <field name="student_country_id"/>
                        <field name="source_id"/>
                    </group>
                </page>
            </page>
        </field>
    </record>
    
    <!-- Add filter for universities -->
    <record id="view_res_partner_filter_universities" model="ir.ui.view">
        <field name="name">res.partner.filter.universities</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="type_person" position="after">
            </filter>
        </field>
    </record>
    
    <!-- Add button to CRM Lead form -->
    <record id="view_crm_lead_form_student_extension" model="ir.ui.view">
        <field name="name">crm.lead.form.student.extension</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_create_student_from_lead" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-graduation-cap"
                        string="Tələbə Yarat"
                        help="Bu lead-dən tələbə qeydiyyatı yarat"/>
            </xpath>
        </field>
    </record>

    <!-- Teacher List View -->
    <record id="view_teacher_list" model="ir.ui.view">
        <field name="name">res.partner.teacher.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Müəllimlər">
                <field name="name"/>
                <field name="salary_type"/>
                <field name="fixed_salary" string="Sabit Maaş" optional="show"/>
                <field name="lesson_rate" string="Dərs Faizi" optional="show"/>
                <field name="phone"/>
                <field name="email"/>
                <button name="action_create_salary" type="object" 
                        icon="fa-money" title="Maaş Yarat"
                        string="Ödəniş Yarat"/>
            </list>
        </field>
    </record>

    <!-- Teacher Action -->
    <record id="action_teachers" model="ir.actions.act_window">
        <field name="name">👨‍🏫 Müəllimlər</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_teacher_list"/>
        <field name="domain">[('is_teacher', '=', True)]</field>
        <field name="context">{'default_is_teacher': True, 'default_is_company': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk müəllimi əlavə edin
            </p>
            <p>
                Bu bölmədə müəllimləri idarə edə bilərsiniz.
            </p>
        </field>
    </record>

    <!-- Contacts (Non-Teachers) Action -->
    <record id="action_contacts" model="ir.actions.act_window">
        <field name="name">📞 Kontaktlar</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_teacher', '=', False)]</field>
        <field name="context">{'default_is_teacher': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk kontaktı əlavə edin
            </p>
            <p>
                Bu bölmədə kontaktları idarə edə bilərsiniz.
            </p>
        </field>
    </record>

    <!-- Teachers and Contacts Menus -->
    <menuitem id="menu_teachers" name="👨‍🏫 Müəllimlər" parent="menu_edde_root" action="action_teachers" sequence="15"/>
    <menuitem id="menu_contacts" name="📞 Kontaktlar" parent="menu_edde_root" action="action_contacts" sequence="16"/>


</odoo>