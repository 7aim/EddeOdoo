<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kurs Group Form View -->
    <record id="view_course_group_form" model="ir.ui.view">
        <field name="name">course.group.form</field>
        <field name="model">course.group</field>
        <field name="arch" type="xml">
            <form string="Kurs Qrupu">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Qrup adı..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="teacher_id" options="{'no_create': True}"/>
                            <field name="number_of_weeks"/>
                            <field name="program_id" widget="many2many_tags"/>
                            <field name="course_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="member_count" readonly="1"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Qrup Üzvləri">
                            <div class="row">
                                <div class="col-6">
                                    <!-- Burada əlavə düymələr ola bilər -->
                                </div>
                            </div>
                            <field name="member_ids">
                                <list string="Qrup Üzvləri" create="true" editable="bottom">
                                    <field name="student_name"/>
                                    <!--field name="student_id"/-->
                                    <field name="notes"/>
                                    <field name="join_date"/>
                                    <field name="monthly_payment"/>
                                    <field name="status"/>
                                </list>
                            </field>
                            <div class="col-6">
                                <div class="alert alert-info">
                                    <strong>Üzv Statistikası:</strong><br/>
                                    Aktiv üzv sayı: <field name="active_member_count" readonly="1" nolabel="1"/><br/>
                                    Ümumi aylıq ödəniş: <field name="total_monthly_payment" readonly="1" nolabel="1" widget="monetary"/>
                                </div>
                            </div>        
                        </page>
                        <page string="Qrup Qrafiki">
                            <field name="schedule_ids">
                                <list string="Həftəlik Qrafik" editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="notes"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                            <div class="mt-3">
                                <p><strong>Nümunə:</strong></p>
                                <ul>
                                    <li>Çərşənbə → 12:00–13:00</li>
                                    <li>Bazar → 11:00–12:00</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Dərs Günləri">
                            <div class="row">
                                <div class="col-6">
                                    <button name="action_generate_lesson_days" type="object" 
                                            string="Dərs Günlərini Yarat" class="btn-primary"/>
                                    <button name="action_assign_all_teachers" type="object" 
                                            string="Bütün dərslərə müəllim təyin et" class="btn-secondary ml8"/>
                                </div>
                                <div class="col-6">
                                    <div class="alert alert-info">
                                        <strong>Statistika:</strong><br/>
                                        Ümumi dərs sayı: <field name="lesson_day_count" readonly="1" nolabel="1"/><br/>
                                        Müəllimi olan: <field name="lessons_with_teacher_count" readonly="1" nolabel="1"/>
                                    </div>
                                </div>
                            </div>
                            <field name="lesson_day_ids">
                                <list string="Dərs Günləri" create="false" delete="false">
                                    <field name="lesson_date"/>
                                    <field name="day_of_week"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="teacher_id" domain="[('is_teacher', '=', True)]" options="{'no_create': True}"/>
                                    <field name="status"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kurs Group List View -->
    <record id="view_course_group_list" model="ir.ui.view">
        <field name="name">course.group.list</field>
        <field name="model">course.group</field>
        <field name="arch" type="xml">
            <list string="Kurs Qrupları" decoration-success="is_active==True" 
                  decoration-muted="is_active==False">
                <field name="name"/>
                <field name="member_count"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <!-- Kurs Group Search View -->
    <record id="view_course_group_search" model="ir.ui.view">
        <field name="name">course.group.search</field>
        <field name="model">course.group</field>
        <field name="arch" type="xml">
            <search string="Kurs Qrupları">
                <field name="name"/>
                <filter string="Aktiv Qruplar" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Passiv Qruplar" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Qruplaşdırma">
                    <filter string="Aktivlik" name="group_active" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_course_group" model="ir.actions.act_window">
        <field name="name">Kurs Qrupları</field>
        <field name="res_model">course.group</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_is_active': True}</field>
    </record>

    <menuitem id="menu_course_groups" name="👥 Qruplar" parent="menu_edde_root" 
              action="action_course_group" sequence="2"/>

    <!-- Course Group Lesson Day Form View -->
    <record id="view_course_group_lesson_day_form" model="ir.ui.view">
        <field name="name">course.group.lesson.day.form</field>
        <field name="model">course.group.lesson.day</field>
        <field name="arch" type="xml">
            <form string="Dərs Günü">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="group_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="lesson_date"/>
                            <field name="day_of_week"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="teacher_id" domain="[('is_teacher', '=', True)]"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Group Lesson Day Form View -->
    <record id="view_course_group_lesson_day_form" model="ir.ui.view">
        <field name="name">course.group.lesson.day.form</field>
        <field name="model">course.group.lesson.day</field>
        <field name="arch" type="xml">
            <form string="Dərs Günü">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="lesson_date" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="group_id" readonly="1" options="{'no_open': True}"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="day_of_week" readonly="1"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="teacher_id" domain="[('is_teacher', '=', True)]" options="{'no_create': True}"/>
                            <field name="status"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tələbə Devamiyyəti">
                            <div class="row mb-3">
                                <div class="col-8">
                                    <div class="alert alert-info mb-0">
                                        <strong>Məlumat:</strong> Bu dərsə iştirak edəcək tələbələrin siyahısı aşağıdadır. 
                                        Checkbox-ı işarələdiyiniz tələbələr "iştirak etdi" kimi qeydə alınacaq.
                                    </div>
                                </div>
                                <div class="col-4">
                                    <button name="action_refresh_attendance" type="object" 
                                            string="Siyahını Yenilə" class="btn-secondary"
                                            help="Yeni üzvlər əlavə olunduqda devamiyyət siyahısını yeniləyin"/>
                                </div>
                            </div>
                            
                            <field name="attendance_list">
                                <list editable="bottom" create="false" delete="false">
                                    <field name="student_name" readonly="1"/>
                                    <field name="is_present" widget="boolean_toggle"/>
                                    <field name="excuse" attrs="{'readonly': [('is_present', '=', True)]}"/>
                                    <field name="notes" placeholder="Əlavə qeydlər"/>
                                </list>
                            </field>
                        </page>
                        <page string="Qeydlər">
                            <field name="notes" nolabel="1" placeholder="Dərs haqqında əlavə qeydlər..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Group Lesson Day Calendar View -->
    <record id="view_course_group_lesson_day_calendar" model="ir.ui.view">
        <field name="name">course.group.lesson.day.calendar</field>
        <field name="model">course.group.lesson.day</field>
        <field name="arch" type="xml">
            <calendar string="Dərs Təqvimi" 
                      date_start="lesson_date" 
                      color="group_id"
                      quick_create="false"
                      create="false">
                <field name="group_id"/>
                <field name="teacher_id"/>
                <field name="status"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="day_of_week"/>
            </calendar>
        </field>
    </record>

    <!-- Course Group Lesson Day List View for Calendar -->
    <record id="view_course_group_lesson_day_list_calendar" model="ir.ui.view">
        <field name="name">course.group.lesson.day.list.calendar</field>
        <field name="model">course.group.lesson.day</field>
        <field name="arch" type="xml">
            <list string="Dərs Günləri" create="false" edit="false">
                <field name="lesson_date"/>
                <field name="group_id"/>
                <field name="day_of_week"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="teacher_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Course Group Lesson Day Search View -->
    <record id="view_course_group_lesson_day_search" model="ir.ui.view">
        <field name="name">course.group.lesson.day.search</field>
        <field name="model">course.group.lesson.day</field>
        <field name="arch" type="xml">
            <search string="Dərs Günləri Axtar">
                <field name="group_id" string="Qrup"/>
                <field name="teacher_id" string="Müəllim"/>
                <field name="lesson_date" string="Tarix"/>
                
                <filter string="Bu gün" name="today" domain="[('lesson_date', '=', context_today())]"/>
                <!--filter string="Son həftə" name="recent" domain="[('lesson_date', '&gt;=', (context_today() - 7))]"/-->
                <filter string="Gələcək" name="future" domain="[('lesson_date', '&gt;=', context_today())]"/>
                <separator/>
                <filter string="Planlaşdırılmış" name="scheduled" domain="[('status', '=', 'scheduled')]"/>
                <filter string="Keçirilmiş" name="completed" domain="[('status', '=', 'completed')]"/>
                <filter string="Müəllimi olan" name="with_teacher" domain="[('teacher_id', '!=', False)]"/>
                
                <group expand="1" string="Qruplaşdır">
                    <filter string="Qrup" name="group_by_group" context="{'group_by': 'group_id'}"/>
                    <filter string="Müəllim" name="group_by_teacher" context="{'group_by': 'teacher_id'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Həftənin günü" name="group_by_day" context="{'group_by': 'day_of_week'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Course Lesson Calendar Action -->
    <record id="action_course_lesson_calendar" model="ir.actions.act_window">
        <field name="name">Dərs Təqvimi</field>
        <field name="res_model">course.group.lesson.day</field>
        <field name="view_mode">calendar,list</field>
        <field name="search_view_id" ref="view_course_group_lesson_day_search"/>
        <field name="context">{'search_default_scheduled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Dərs təqvimi
            </p>
            <p>
                Bu səhifədə bütün qrupların dərs günlərini təqvim formatında görə bilərsiniz.
            </p>
        </field>
    </record>

    <!-- Menu Item for Course Lesson Calendar -->
    <menuitem id="menu_course_lesson_calendar"
              name="📅 Dərs Təqvimi"
              parent="menu_edde_root"
              action="action_course_lesson_calendar"
              sequence="15"/>

</odoo>
