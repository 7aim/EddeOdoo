<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Course Registration Form View -->
    <record id="view_course_registration_form" model="ir.ui.view">
        <field name="name">edde.course.registration.form</field>
        <field name="model">edde.course.registration</field>
        <field name="arch" type="xml">
            <form string="Qeydiyyat">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}" 
                           statusbar_visible="draft,pending,confirmed,in_progress,completed,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="student_code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <!--field name="father_name"/-->
                            <!--field name="group_id" options="{'no_create': True}"/-->
                            <field name="id_card_number"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="start_date"/>
                            <field name="country"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="phone2"/>
                            <field name="email"/>
                            <field name="program"/>
                            <field name="course"/>
                            <field name="source"/>
                            <field name="active_groups" widget="many2many_tags" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Həftəlik Qrafik">
                            <div class="oe_button_box">
                                <button name="update_schedule_from_groups" type="object" 
                                        string="Qrafiki Yenilə" class="btn-primary"
                                        help="Aktiv qrup üzvlüklərindən həftəlik qrafik yaradır"/>
                            </div>
                            <field name="schedule_ids">
                                <list string="Həftəlik Qrafik" editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="is_active"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <div class="mt-3">
                                <p><strong>Nümunə:</strong></p>
                                <ul>
                                    <li>Çərşənbə → 12:00–13:00</li>
                                    <li>Bazar → 11:00–12:00</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Dərsə İştiraklar">
                            <field name="attendance_ids">
                                <list string="İştiraklar" create="false">
                                    <field name="attendance_date"/>
                                    <field name="attendance_time"/>
                                    <field name="schedule_id"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Qruplar">
                            <field name="group_memberships">
                                <list string="Qrup Üzvlüyü" editable="bottom">
                                    <field name="group_id" options="{'no_create': True}"/>
                                    <field name="join_date"/>
                                    <field name="monthly_payment"/>
                                    <field name="status"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Əlavə məlumat">
                            <group>
                                <group>
                                    <field name="note"/>
                                </group>  
                                <group>
                                    <field name="rejection_reason"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Registration list View -->
    <record id="view_course_registration_list" model="ir.ui.view">
        <field name="name">edde.course.registration.list</field>
        <field name="model">edde.course.registration</field>
        <field name="arch" type="xml">
            <list string="Qeydiyyatlar" decoration-info="status=='draft'" decoration-warning="status=='pending'" decoration-success="status=='confirmed'" decoration-danger="status=='cancelled'">
                <field name="student_code"/>
                <field name="student_id"/>
                <field name="phone"/>
                <field name="program"/>
                <field name="course"/>
                <field name="start_date"/>
                <field name="status"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Course Registration Search View -->
    <record id="view_course_registration_search" model="ir.ui.view">
        <field name="name">edde.course.registration.search</field>
        <field name="model">edde.course.registration</field>
        <field name="arch" type="xml">
            <search string="Qeydiyyat axtarışı">
                <field name="student_id"/>
                <field name="student_code"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="program"/>
                <field name="course"/>
                <separator/>
                <filter string="Qaralama" name="draft" domain="[('status','=','draft')]"/>
                <filter string="Gözləmədə" name="pending" domain="[('status','=','pending')]"/>
                <filter string="Təsdiqləndi" name="confirmed" domain="[('status','=','confirmed')]"/>
                <filter string="Davam edir" name="in_progress" domain="[('status','=','in_progress')]"/>
                <filter string="Tamamlandı" name="completed" domain="[('status','=','completed')]"/>
                <filter string="Ləğv edildi" name="cancelled" domain="[('status','=','cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                    <filter string="Program" name="program" context="{'group_by': 'program'}"/>
                    <filter string="Kurs" name="course" context="{'group_by': 'course'}"/>
                    <filter string="Başlama tarixi" name="start_date" context="{'group_by': 'start_date'}"/>
                    <filter string="Yaradılma tarixi" name="create_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Course Registration Action -->
    <record id="action_course_registration" model="ir.actions.act_window">
        <field name="name">Qeydiyyatlar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edde.course.registration</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_course_registration_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk qeydiyyatınızı yaradın
            </p>
        </field>
    </record>

    <!-- Course Registration Menu -->
    <menuitem id="menu_edde_root" name="EDDE Kurslar" sequence="10"/>
    <menuitem id="menu_course_registration" name="Qeydiyyatlar" parent="menu_edde_root" action="action_course_registration" sequence="1"/>

</odoo>
